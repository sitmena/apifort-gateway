{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {},
  "id": "profile-validator",
  "properties": {
    "service_name": {
      "default": "127.0.0.1:5050",
      "type": "string",
      "pattern": "^[a-zA-Z0-9-_.:]+$",
      "maxLength": 150
    },
    "context_path": {
      "default": "dss-one",
      "type": "string",
      "pattern": "^[a-zA-Z0-9._-]+$",
      "maxLength": 150
    },
    "endpoint_path": {
      "default": "/cards/{id}",
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "pattern": "^(\/[a-z_\\-\\s0-9{}.]+)+$"
    },
    "method_type": {
      "default": "POST",
      "type": "string",
      "pattern": "^[A-Z]{3,6}$"
    },
    "auth_claim_value": {
      "default": "uma_authorization",
      "type": "string",
      "pattern": "^[a-zA-Z_-]+$",
      "minLength": 5,
      "maxLength": 50
    },
    "is_public_service": {
      "default": false,
      "type": "boolean"
    },
    "offline_authentication": {
      "default": true,
      "type": "boolean"
    },
    "version_number": {
      "default": 1,
      "type": "integer",
      "minimum": 1,
      "maximum": 99
    }
  },
  "required": [
    "service_name",
    "context_path",
    "endpoint_path",
    "method_type",
    "auth_claim_value",
    "is_public_service",
    "offline_authentication",
    "version_number"
  ],
  "type": "object"
}